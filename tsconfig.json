{
  "ts-node": {
    "transpileOnly": false,
    "files": true
  },
  "compilerOptions": {
    "baseUrl": ".",
    "outDir": "dist",
    "module": "commonjs",
    "moduleResolution": "node",
    "target": "es5",
    "esModuleInterop": true,
    "noImplicitAny": false,
    "resolveJsonModule": true,
    "sourceMap": false,
    "skipLibCheck": true,
    "paths": {
      "atw-shared/*": ["src/ext/atw-shared/source/*"],
      "controllers/*": ["src/controllers/*"],
      "utils/*": ["src/utils/*"],
      "models/*": ["src/models/*"],
      "validation/*": ["src/validation/*"],
      "middleware/*": ["src/middleware/*"],
      "helpers/*": ["src/helpers/*"]
    }
  },
  "include": ["src/**/*", "db/**/*", "tests/**/*"],
  "exclude": ["src/ext"]
}
