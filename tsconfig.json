{
  "ts-node": {
    "transpileOnly": false,
    "files": true
  },
  "compilerOptions": {
    "baseUrl": ".",
    "outDir": "dist",
    "module": "commonjs",
    "moduleResolution": "node",
    "target": "es5",
    "esModuleInterop": true,
    "noImplicitAny": false,
    "resolveJsonModule": true,
    "sourceMap": false,
    "paths": {
      "shared/*": ["src/lib/ask-the-world-shared/src/*"],
      "controllers/*": ["src/controllers/*"],
      "utils/*": ["src/utils/*"],
      "models/*": ["src/models/*"],
      "validation/*": ["src/validation/*"],
      "middleware/*": ["src/middleware/*"],
      "helpers/*": ["src/helpers/*"]
    }
  },
  "include": ["src/**/*"],
  "exclude": ["node_modules", "build", "coverage", "env", "dist"]
}
