{
  "compilerOptions": {
    "baseUrl": ".",
    "outDir": "dist",
    "module": "commonjs",
    "moduleResolution": "node",
    "target": "es6",
    "esModuleInterop": true,
    "noImplicitAny": true,
    "resolveJsonModule": true,
    "sourceMap": true,
    "paths": {
      "shared/*": ["src/lib/ask-the-world-shared/*"],
      "controllers/*": ["src/controllers/*"],
      "utils/*": ["src/utils/*"],
      "models/*": ["src/models/*"],
      "mocks/*": ["src/mocks/*"],
      "validation/*": ["src/validation/*"],
      "middleware/*": ["src/middleware/*"],
      "helpers/*": ["src/helpers/*"]
    }
  },
  "include": ["src/**/*"],
  "exclude": ["src/**/*.spec.ts", "node_modules", "build", "coverage", "env", "dist"]
}
