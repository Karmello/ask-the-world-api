{
  "swagger": "2.0",
  "info": {
    "version": "1.0.0",
    "title": "Ask The World API",
    "license": {
      "name": "Repository",
      "url": "https://gitlab.com/Karmello/ask-the-world-api"
    }
  },
  "tags": [{ "name": "User" }, { "name": "Question" }, { "name": "Other" }],
  "consumes": ["application/json"],
  "produces": ["application/json"],
  "definitions": {
    "User": {
      "title": "User",
      "properties": {
        "_id": { "type": "string", "format": "byte", "unique": true },
        "email": { "type": "string", "unique": true },
        "username": { "type": "string", "unique": true },
        "dateOfBirth": { "type": "string" },
        "country": { "type": "string" },
        "timestamp": { "type": "number" }
      },
      "required": ["_id", "email", "username", "dateOfBirth", "country", "timestamp"]
    },
    "Question": {
      "title": "Question",
      "properties": {
        "_id": { "type": "string", "format": "byte", "unique": true },
        "userId": { "type": "string", "format": "byte", "unique": true },
        "timestamp": { "type": "number" },
        "text": { "type": "string" },
        "answers": {
          "type": "array",
          "items": {
            "$ref": "#/definitions/Answer"
          }
        },
        "options": {
          "properties": {
            "multipleChoice": {
              "type": "boolean"
            },
            "maxSelectable": {
              "type": "number"
            }
          }
        },
        "answeredTimes": { "type": "number" }
      },
      "required": ["_id", "userId", "timestamp", "text", "answers", "options", "answeredTimes"]
    },
    "Answer": {
      "title": "Answer",
      "properties": {
        "text": {
          "type": "string"
        }
      },
      "required": ["text"]
    }
  },
  "errors": {
    "AuthorizationError": {
      "title": "AuthorizationError",
      "properties": {}
    },
    "BadRequestError": {
      "title": "BadRequestError",
      "properties": {}
    },
    "ResourceNotFoundError": {
      "title": "ResourceNotFoundError",
      "properties": {}
    },
    "AccessForbiddenError": {
      "title": "AccessForbiddenError",
      "properties": {}
    }
  },
  "paths": {
    "/registration": {
      "post": {
        "summary": "[open endpoint]",
        "tags": ["User"],
        "parameters": [
          {
            "name": "formValues",
            "in": "body",
            "required": true,
            "schema": {
              "type": "object",
              "properties": {
                "email": { "type": "string" },
                "username": { "type": "string" },
                "password": { "type": "string" },
                "dateOfBirth": { "type": "string" },
                "country": { "type": "string" }
              }
            }
          }
        ],
        "responses": {
          "201": {
            "schema": {
              "$ref": "#/definitions/User"
            }
          },
          "400": {
            "schema": {
              "$ref": "#/errors/BadRequestError"
            }
          }
        }
      }
    },
    "/authentication": {
      "post": {
        "summary": "[open endpoint]",
        "description": "Authenticate either with token or credentials.",
        "tags": ["User"],
        "parameters": [
          { "name": "atw-x-auth-token", "in": "header" },
          {
            "name": "formValues",
            "in": "body",
            "schema": {
              "type": "object",
              "properties": {
                "username": { "type": "string" },
                "password": { "type": "string" }
              }
            }
          }
        ],
        "responses": {
          "201": {
            "schema": {
              "$ref": "#/definitions/User"
            }
          },
          "400": {
            "schema": {
              "$ref": "#/errors/BadRequestError"
            }
          },
          "401": {
            "schema": {
              "$ref": "#/errors/AuthorizationError"
            }
          }
        }
      }
    },
    "/read-user": {
      "get": {
        "tags": ["User"],
        "parameters": [
          { "name": "atw-x-auth-token", "in": "header", "required": true },
          {
            "name": "_id",
            "in": "query",
            "required": true,
            "schema": {
              "type": "string",
              "format": "byte"
            }
          }
        ],
        "responses": {
          "200": {
            "schema": {
              "$ref": "#/definitions/User"
            }
          },
          "400": {
            "schema": {
              "$ref": "#/errors/BadRequestError"
            }
          },
          "401": {
            "schema": {
              "$ref": "#/errors/AuthorizationError"
            }
          },
          "404": {
            "schema": {
              "$ref": "#/errors/ResourceNotFoundError"
            }
          }
        }
      }
    },
    "/update-user": {
      "put": {
        "tags": ["User"],
        "parameters": [
          { "name": "atw-x-auth-token", "in": "header", "required": true },
          {
            "name": "formValues",
            "in": "body",
            "required": true,
            "schema": {
              "type": "object",
              "properties": {
                "_id": { "type": "string", "format": "byte" },
                "email": { "type": "string" },
                "username": { "type": "string" },
                "dateOfBirth": { "type": "string" },
                "country": { "type": "string" }
              }
            }
          }
        ],
        "responses": {
          "200": {
            "schema": {
              "$ref": "#/definitions/User"
            }
          },
          "400": {
            "schema": {
              "$ref": "#/errors/BadRequestError"
            }
          },
          "401": {
            "schema": {
              "$ref": "#/errors/AuthorizationError"
            }
          },
          "404": {
            "schema": {
              "$ref": "#/errors/ResourceNotFoundError"
            }
          }
        }
      }
    },
    "/update-password": {
      "put": {
        "tags": ["User"],
        "parameters": [
          { "name": "atw-x-auth-token", "in": "header", "required": true },
          {
            "name": "formValues",
            "in": "body",
            "required": true,
            "schema": {
              "type": "object",
              "properties": {
                "_id": { "type": "string", "format": "byte" },
                "currentPassword": { "type": "string" },
                "newPassword": { "type": "string" }
              }
            }
          }
        ],
        "responses": {
          "200": {
            "schema": {
              "$ref": "#/definitions/User"
            }
          },
          "400": {
            "schema": {
              "$ref": "#/errors/BadRequestError"
            }
          },
          "401": {
            "schema": {
              "$ref": "#/errors/AuthorizationError"
            }
          }
        }
      }
    },
    "/create-question": {
      "post": {
        "tags": ["Question"],
        "parameters": [
          { "name": "atw-x-auth-token", "in": "header", "required": true },
          {
            "name": "formValues",
            "in": "body",
            "required": true,
            "schema": {
              "type": "object",
              "properties": {
                "text": { "type": "string" },
                "answers": {
                  "type": "array",
                  "items": {
                    "type": "object",
                    "properties": {
                      "text": { "type": "string" }
                    }
                  }
                },
                "options": {
                  "type": "object",
                  "properties": {
                    "multipleChoice": { "type": "boolean" },
                    "maxSelectable": { "type": "number" }
                  }
                }
              }
            }
          }
        ],
        "responses": {
          "201": {
            "schema": {
              "$ref": "#/definitions/Question"
            }
          },
          "400": {
            "schema": {
              "$ref": "#/errors/BadRequestError"
            }
          },
          "401": {
            "schema": {
              "$ref": "#/errors/AuthorizationError"
            }
          }
        }
      }
    },
    "/read-questions": {
      "get": {
        "summary": "[open endpoint]",
        "tags": ["Question"],
        "parameters": [
          { "name": "userId", "in": "query", "type": "string", "format": "byte" },
          { "name": "skip", "in": "query", "type": "number" },
          { "name": "limit", "in": "query", "type": "number", "default": 5 },
          {
            "name": "timestamp",
            "in": "query",
            "type": "number",
            "description": "sort by timestamp: [-1, 1]",
            "default": 1
          },
          {
            "name": "answeredTimes",
            "in": "query",
            "type": "number",
            "description": "sort by answeredTimes: [-1, 1]",
            "default": 1
          },
          {
            "name": "selfAnswered",
            "in": "query",
            "type": "number",
            "description": "[0, 1]",
            "default": 0
          },
          {
            "name": "keywords",
            "in": "query",
            "type": "string",
            "description": "space separated strings"
          },
          {
            "name": "keywordsMode",
            "in": "query",
            "type": "string",
            "description": "[ALL, ANY]"
          }
        ],
        "responses": {
          "200": {
            "schema": {
              "type": "array",
              "items": {
                "$ref": "#/definitions/Question"
              }
            }
          },
          "400": {
            "schema": {
              "$ref": "#/errors/BadRequestError"
            }
          }
        }
      }
    },
    "/update-question": {
      "put": {
        "tags": ["Question"],
        "parameters": [
          { "name": "atw-x-auth-token", "in": "header", "required": true },
          { "name": "questionId", "in": "query", "required": true },
          {
            "name": "selectedIndexes",
            "in": "body",
            "required": true,
            "schema": {
              "type": "array",
              "items": {
                "type": "number"
              }
            }
          }
        ],
        "responses": {
          "200": {
            "schema": {
              "$ref": "#/definitions/Question"
            }
          },
          "400": {
            "schema": {
              "$ref": "#/errors/BadRequestError"
            }
          },
          "401": {
            "schema": {
              "$ref": "#/errors/AuthorizationError"
            }
          },
          "403": {
            "schema": {
              "$ref": "#/errors/AccessForbiddenError"
            }
          }
        }
      }
    },
    "/delete-question": {
      "delete": {
        "tags": ["Question"],
        "parameters": [
          { "name": "atw-x-auth-token", "in": "header", "required": true },
          { "name": "_id", "in": "query", "required": true }
        ],
        "responses": {
          "204": {},
          "400": {
            "schema": {
              "$ref": "#/errors/BadRequestError"
            }
          },
          "401": {
            "schema": {
              "$ref": "#/errors/AuthorizationError"
            }
          },
          "404": {
            "schema": {
              "$ref": "#/errors/ResourceNotFoundError"
            }
          }
        }
      }
    },
    "/read-stats": {
      "get": {
        "summary": "[open endpoint]",
        "tags": ["Other"],
        "responses": {
          "200": {
            "schema": {
              "properties": {
                "count": {
                  "properties": {
                    "users": { "type": "number" },
                    "questions": { "type": "number" },
                    "answers": { "type": "number" }
                  }
                }
              }
            }
          },
          "400": {
            "schema": {
              "$ref": "#/errors/BadRequestError"
            }
          }
        }
      }
    },
    "/info": {
      "get": {
        "summary": "[open endpoint]",
        "tags": ["Other"],
        "responses": {
          "200": {
            "schema": {
              "type": "object",
              "properties": {
                "status": {
                  "type": "string",
                  "example": "OK"
                },
                "revision": {
                  "type": "string"
                }
              }
            }
          }
        }
      }
    }
  }
}
