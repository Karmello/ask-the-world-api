{
  "name": "ask-the-world-api",
  "version": "0.1.0",
  "private": true,
  "scripts": {
    "build": "cross-env NODE_ENV=production webpack --config config/webpack.config",
    "start": "cross-env NODE_ENV=production node build/index.js",
    "start-local": "cross-env dotenv_config_path=env/.env.local NODE_ENV=development APP_ENV=local nodemon --exec ts-node -r dotenv/config -r tsconfig-paths/register src/index.ts",
    "prettier": "prettier --check src/**/*.ts",
    "tslint": "tslint src/**/*.{ts,tsx}",
    "unit": "cross-env NODE_ENV=test APP_ENV=test APP_LANG=PL PORT=10000 mocha -r ts-node/register -r tsconfig-paths/register src/**/*.spec.ts --timeout 10000 --exit",
    "test": "cross-env dotenv_config_path=env/.env.test mocha -r dotenv/config -r ts-node/register -r tsconfig-paths/register tests/_index.ts --timeout 10000 --exit",
    "seed-local": "ts-node ./mocks/seed.ts mongodb://localhost:27017/ask-the-world-local",
    "seed-remote-dev": "yarn ts-node ./mocks/seed.ts $MONGO_URI",
    "clear-local": "ts-node ./mocks/clear.ts mongodb://localhost:27017/ask-the-world-local",
    "ps": "cmd/pull-shared.cmd"
  },
  "dependencies": {
    "@babel/core": "^7.9.0",
    "@babel/plugin-proposal-class-properties": "^7.8.3",
    "@babel/preset-env": "^7.9.5",
    "@babel/preset-typescript": "^7.9.0",
    "@babel/register": "^7.9.0",
    "@types/bcryptjs": "^2.4.2",
    "@types/chai": "^4.2.14",
    "@types/chai-http": "^4.2.0",
    "@types/express": "^4.17.6",
    "@types/faker": "^4.1.11",
    "@types/jsonwebtoken": "^8.5.0",
    "@types/lodash": "^4.14.150",
    "@types/mocha": "^8.0.4",
    "@types/mongoose": "^5.7.12",
    "@types/mongoose-unique-validator": "^1.0.4",
    "@types/morgan": "^1.9.1",
    "@types/nodemailer": "^6.4.0",
    "axios": "^0.21.1",
    "babel-loader": "^8.1.0",
    "babel-plugin-module-resolver": "^4.0.0",
    "bcryptjs": "^2.4.3",
    "body-parser": "^1.19.0",
    "chai": "^4.2.0",
    "chai-http": "^4.3.0",
    "copy-webpack-plugin": "^6.3.1",
    "cross-env": "^7.0.2",
    "date-fns": "^2.23.0",
    "dotenv": "^8.2.0",
    "esprima": "^4.0.1",
    "express": "^4.17.1",
    "faker": "^4.1.0",
    "helmet": "^4.2.0",
    "jsonwebtoken": "^8.5.1",
    "lodash": "^4.17.15",
    "mocha": "^8.2.1",
    "mongodb-client-encryption": "^1.1.0",
    "mongoose": "^5.9.25",
    "mongoose-unique-validator": "^2.0.3",
    "morgan": "^1.10.0",
    "nodemailer": "^6.5.0",
    "nodemon": "^2.0.4",
    "prettier": "^2.0.4",
    "ts-loader": "^8.0.1",
    "ts-node": "^8.10.2",
    "tsconfig-paths": "^3.9.0",
    "tslint": "^6.1.3",
    "typescript": "^3.9.7",
    "webpack": "^4.42.1",
    "webpack-cli": "^3.3.11"
  }
}
